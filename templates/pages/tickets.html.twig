{% extends 'base.html.twig' %}

{% block title %}Musée du Louvre - Billetterie en ligne{% endblock %}
{% block description %}{% endblock %}


{% block body %}
    {% include 'parts/header.html.twig' %}
    {% include 'parts/jumbotron.html.twig' with {'pagetitle': 'Billetterie en ligne'} %}


    <div class="container">
        <div class="row">
            {% include 'parts/column.html.twig' %}
            <div class="col-md-8 order-md-1">
                <h4>Vos billets</h4>
                <hr>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {% for ticket in form.tickets %}
                    <h4 class="title-ticket mb-3">Billet {{ loop.index }}</h4>
                    <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(ticket.firstname) }}
                        {{ form_widget(ticket.firstname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(ticket.lastname) }}
                        {{ form_widget(ticket.lastname) }}
                    </div>
                </div>
                <div class="form-group row mb-4">
                    <div class="col-md-6">
                        {{ form_label(ticket.birth) }}
                        <span class="fi-bell"></span>
                        {{ form_widget(ticket.birth) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(ticket.country) }}
                        {{ form_widget(ticket.country) }}
                    </div>
                </div>
                    <div class="form-group row mb-4">
                        <div class="col-md-6">
                            {{ form_label(ticket.discount) }}
                            {{ form_widget(ticket.discount) }}
                        </div>
                    </div>
                    <hr class="mb-4">
                {% endfor %}
                <div class="form-group row">
                    <div class="col-md-6">
                        <a class=" button-back" href="/"><button class="btn btn-light btn-md btn-block" type="button">Retour en arrière</button></a>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-primary btn-md btn-block" type="submit">Commander vos billets</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include 'parts/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/lib/js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}